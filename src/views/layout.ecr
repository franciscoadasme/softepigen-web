<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Softepigen</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body class="bg-stone-100 min-h-screen">
    <div class="w-[56rem] mx-auto px-4 pt-[10rem] pb-10">
      <div class="text-center mb-8">
        <h1 class="text-4xl md:text-5xl font-bold mb-2">ðŸ§¬Softepigen</h1>
        <p class="text-stone-600 text-lg">
          Primers Design Web-Based Tool for MS-HRM Technique
        </p>
      </div>

      <%= content %>
    </div>

    <div
      id="notification"
      class="hidden fixed flex gap-4 items-center top-0 right-0 text-sm bg-white shadow-lg rounded-lg p-4 m-4 border border-stone-200 opacity-0 -translate-y-3/2 transition-all transition-discrete duration-300 ease-in-out"
    >
      <svg
        class="size-4 fill-green-600 hidden icon-success"
        viewBox="0 0 507.506 507.506"
      >
        <path
          d="M163.865,436.934c-14.406,0.006-28.222-5.72-38.4-15.915L9.369,304.966c-12.492-12.496-12.492-32.752,0-45.248l0,0   c12.496-12.492,32.752-12.492,45.248,0l109.248,109.248L452.889,79.942c12.496-12.492,32.752-12.492,45.248,0l0,0   c12.492,12.496,12.492,32.752,0,45.248L202.265,421.019C192.087,431.214,178.271,436.94,163.865,436.934z"
        />
      </svg>
      <svg class="size-4 fill-red-500 hidden icon-alert" viewBox="0 0 24 24">
        <path
          d="m22.536,8.46L15.537,1.459C14.592.515,13.337-.006,12.001-.006s-2.592.521-3.536,1.465L1.466,8.46c-1.949,1.949-1.949,5.12,0,7.069l6.999,7.001c.944.944,2.2,1.465,3.536,1.465s2.591-.521,3.536-1.465l6.999-7.001c.944-.944,1.464-2.199,1.464-3.534s-.52-2.591-1.464-3.535Zm-1.414,5.655l-6.999,7.001c-1.134,1.133-3.11,1.133-4.244,0l-6.999-7.001c-1.169-1.169-1.169-3.072,0-4.241l6.999-7.001c.567-.566,1.32-.879,2.122-.879s1.555.312,2.122.879l6.999,7.001c.566.566.878,1.319.878,2.121s-.312,1.554-.878,2.12Zm-7.622,2.385c0,.828-.672,1.5-1.5,1.5s-1.5-.672-1.5-1.5.672-1.5,1.5-1.5,1.5.672,1.5,1.5Zm-2.5-4v-5.5c0-.553.448-1,1-1s1,.447,1,1v5.5c0,.553-.448,1-1,1s-1-.447-1-1Z"
        />
      </svg>
      <div class="flex-1">
        <p class="font-semibold notification-title">Title</p>
        <p class="text-stone-500 notification-message">Message</p>
      </div>
    </div>
  </body>

  <script>
    const toast = document.getElementById("notification");
    const toastTitle = toast.querySelector(".notification-title");
    const toastMessage = toast.querySelector(".notification-message");

    function showToast(title, message, alert = false) {
      toast.classList.remove("hidden", "opacity-0", "-translate-y-3/2");

      if (alert) {
        toast.classList.remove("text-green-600");
        toast.querySelector(".icon-success").classList.add("hidden");
        toastTitle.classList.add("text-red-500");
        toast.querySelector(".icon-alert").classList.remove("hidden");
      } else {
        toast.classList.remove("text-red-500");
        toast.querySelector(".icon-alert").classList.add("hidden");
        toast.classList.add("text-green-600");
        toast.querySelector(".icon-success").classList.remove("hidden");
      }

      toastTitle.textContent = title;
      toastMessage.textContent = message;

      setTimeout(() => {
        toast.classList.add("opacity-0", "-translate-y-3/2");
        setTimeout(() => {
          toast.classList.add("hidden");
        }, 300);
      }, 10000);
    }
  </script>
</html>
